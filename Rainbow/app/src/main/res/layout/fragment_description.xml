<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Background Image -->
            <ImageView
                android:id="@+id/bgImage"
                android:layout_width="match_parent"
                android:layout_height="286dp"
                android:scaleType="centerCrop"
                android:src="@drawable/description_bg" />

            <!-- Apple Image -->
            <ImageView
                android:id="@+id/appleImage"
                android:layout_width="272dp"
                android:layout_height="276dp"
                android:layout_gravity="center"
                android:layout_marginTop="-165dp"
                android:src="@drawable/apple" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp" />

            <!-- Category -->
            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fruits"
                android:textSize="14sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp" />

            <!-- Rating -->
            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­ 4.5 (189 reviews)"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginTop="4dp" />

            <!-- Price -->
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250.00"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#00AA00"
                android:layout_marginTop="6dp" />

            <!-- Weight -->
            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Kg"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginTop="4dp" />

            <!-- Description Title -->
            <TextView
                android:id="@+id/descTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descriptions"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="12dp" />

            <!-- Description Text -->
            <TextView
                android:id="@+id/descText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apple Mountain works as a seller for many apple growers of apple. apple are easy to spot in your produce aisle. They are just like regular apple, but they will usually have a few more scars on..."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="6dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:id="@+id/buttonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/addToCartBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Add to Cart"
                    android:backgroundTint="#E0F2E9"
                    android:textColor="#00AA00" />

                <Button
                    android:id="@+id/buyNowBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Buy Now"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#00AA00"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
            </LinearLayout>

            <!-- Bottom Spacer / Image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/blank_img" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
